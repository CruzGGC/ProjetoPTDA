<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.grupo6.projetoptda.MainController" style="-fx-background-color: #333333;">
    <!-- Topo -->
    <top>
        <VBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
            <Label text="DIGIGEST" style="-fx-font-size: 24px; -fx-text-fill: #00aaff; -fx-font-weight: bold;" />
            <Label text="software solutions" style="-fx-font-size: 14px; -fx-text-fill: #00aaff;" />
            <Label text="12:50:30\n11 de outubro de 2024" style="-fx-font-size: 14px; -fx-text-fill: white;" />
        </VBox>
    </top>

    <!-- Centro -->
    <center>
        <GridPane alignment="CENTER" hgap="15" vgap="15" BorderPane.alignment="CENTER">
            <Button text="Nova Venda" onAction="#onNovaVendaClick" styleClass="btn-primary" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Button text="Gestão de Stock" onAction="#onGestaoStockClick" styleClass="btn-secondary" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Button text="Gerir Mesas" onAction="#onGerirMesasClick" styleClass="btn-tertiary" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Button text="Fechar Caixa" onAction="#onFecharCaixaClick" styleClass="btn-danger" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button text="Valores em Caixa" onAction="#onOperacoesCaixaClick" styleClass="btn-warning" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        </GridPane>
    </center>

    <!-- Rodapé -->
    <bottom>
    </bottom>
</BorderPane>
